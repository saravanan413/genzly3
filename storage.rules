
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - users can only upload their own profile picture
    match /profilePictures/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && 
        (fileName.matches('.*' + request.auth.uid + '.*') || 
         fileName == request.auth.uid + '.jpg');
    }
    
    // Chat media
    match /chats/{chatId}/media/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Posts media
    match /posts/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Stories media
    match /stories/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reels media
    match /reels/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users profile pictures (legacy path support)
    match /users/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
